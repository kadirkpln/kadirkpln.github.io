      <label>3. Kurul Notu (%8.11)</label>
      <input type="number" id="kurul3" placeholder="Notu giriniz">
    </div>
    <div class="pair">
      <label>4. Kurul Notu (%8.11)</label>
      <input type="number" id="kurul4" placeholder="Notu giriniz">
    </div>
    <div class="pair">
      <label>5. Kurul Ara Sınav Notu (%7.784)</label>
      <input type="number" id="kurul5ara" placeholder="Notu giriniz">
    </div>
    <div class="pair">
      <label>5. Kurul Ana Sınav Notu (%11.676)</label>
      <input type="number" id="kurul5ana" placeholder="Notu giriniz">
    </div>
    <div class="pair">
      <label>Final Notu (%40)</label>
      <input type="number" id="final" placeholder="Notu giriniz">
    </div>

    <button onclick="hesapla()">Hesapla</button>
    <div id="sonuc"></div>
  </div>

  <script>
    function hesapla() {
      const notlar = [
        { id: "kurul1", yuzde: 14.59 },
        { id: "kurul2", yuzde: 9.73 },
        { id: "kurul3", yuzde: 8.11 },
        { id: "kurul4", yuzde: 8.11 },
        { id: "kurul5ara", yuzde: 7.784 },
        { id: "kurul5ana", yuzde: 11.676 },
        { id: "final", yuzde: 40 }
      ];

      let toplam = 0;
      for (let n of notlar) {
        const deger = parseFloat(document.getElementById(n.id).value);
        if (!isNaN(deger)) {
          toplam += deger * (n.yuzde / 100);
        }
      }

      let sonucMetni = "Genel Ortalamanız: " + toplam.toFixed(2) + "<br>";
      if (toplam < 59.5) {
        sonucMetni += "<span class='geceme'>Sınıf Tekrarı</span>";
      } else {
        sonucMetni += "<span class='gecti'>Tebrikler, 3. sınıf oldunuz!</span>";
      }

      document.getElementById("sonuc").innerHTML = sonucMetni;
    }
  </script>
